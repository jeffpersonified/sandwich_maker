<h1>New Sandwich Order</h1>
<div class="row">
  <div class="six columns center">
      <%= form_for(@order, :html => { :class => "custom" }) do |f| %> 
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, "Name for order?" %>
        <%= f.text_field :name %> 

      <%= f.label :type, "Type of sandwich?" %>    
        <%= f.radio_button :type, 'meaty', checked: true %>
        <%= f.label :type, "Meaty", value: "meaty" %>

        <%= f.radio_button :type, 'vegetarian' %>
        <%= f.label :type, "vegetarian", value: "vegetarian" %>

        <%= f.radio_button :type, 'vegan' %>
        <%= f.label :type, "Vegan", value: "vegan" %>


      <%= f.label :instructions, "Special Instructions?" %>
        <%= f.text_area :instructions %>

      <%= f.submit "Send Order", class: "button" %>
      <%= f.label :order, "(Orders sent to make_sandwich@generalthings.com)" %>      
    <% end %>
  </div>
</div>

